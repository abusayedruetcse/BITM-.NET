@model SBMSystemMVCApp.Models.Models.Customer
@{
    ViewBag.Title = "Add Customer";
    Layout = "~/Views/Shared/_MyTheme.cshtml";
}
    
<div class="container">
    <div class="row">
        <h1 style="font-family:'Times New Roman', Times, serif;
                       color:green;
                       width:100%;
                       background-color:cornflowerblue;
                       text-align:center">
            Customer Information
        </h1>
    </div>

    <div class="row" >
        <div class="col-2"></div>
        <div class="col-xl-8">
            <form method="post">
                <div style="background-color:lightyellow">
                    <div class="row">
                        <div class="col-md-2" style="text-align:center"><h5>Code</h5></div>
                        <div class="col-xl-10"><input type="text" name="Code" value="@Model.Code"/></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2" style="text-align:center"><h5>Name</h5></div>
                        <div class="col-xl-10"><input type="text" name="Name" value="@Model.Name"/></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2" style="text-align:center"><h5>Address</h5></div>
                        <div class="col-xl-10"><input type="text" name="Address" value="@Model.Address"/></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2" style="text-align:center"><h5>Email</h5></div>
                        <div class="col-xl-10"><input type="text" name="Email" value="@Model.Email"/></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2" style="text-align:center"><h5>Contact</h5></div>
                        <div class="col-xl-10"><input type="text" name="Contact" value="@Model.Contact"/></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2" style="text-align:center"><h5>Loyalty Point</h5></div>
                        <div class="col-xl-10"><input type="text" name="LoyaltyPoint" value="@Model.LoyaltyPoint"/></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2" style="text-align:center"><h5>Action</h5></div>
                        <div class="col-10"><input type="submit" name="Save" value="Save" /></div>
                    </div>
                </div>
            </form>
            <div>
                @if (ViewBag.SuccessMsg != null)
                {
                    <h5 style="color:green; font-size:medium;">@ViewBag.SuccessMsg</h5>
                }

                @if (ViewBag.FailMsg != null)
                {
                    <h5 style="color:red;font-size:medium;">@ViewBag.FailMsg</h5>
                }
            </div>
        </div>
        <div class="col-2"></div>
    </div>
</div>        
        

