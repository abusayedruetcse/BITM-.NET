@model SBMSystemMVCApp.Models.Models.Customer
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="row">
            <h1 style="font-family:'Times New Roman', Times, serif;
                       color:green;
                       width:100%;
                       background-color:cornflowerblue;
                       text-align:center">
                Update Customer Information
            </h1>
        </div>
        <div>
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <form method="post">
                        <div style="background-color:lightyellow">
                            <div class="row">
                                <div class="col-2"><h5>Code</h5></div>
                                <div class="col-10"><input type="text" name="Code" value="@Model.Code" /></div>
                            </div>
                            <div class="row">
                                <div class="col-2"><h5>Name</h5></div>
                                <div class="col-10"><input type="text" name="Name" value="@Model.Name"/></div>
                            </div>
                            <div class="row">
                                <div class="col-2"><h5>Address</h5></div>
                                <div class="col-10"><input type="text" name="Address" value="@Model.Address"/></div>
                            </div>
                            <div class="row">
                                <div class="col-2"><h5>Email</h5></div>
                                <div class="col-10"><input type="text" name="Email" value="@Model.Email"/></div>
                            </div>
                            <div class="row">
                                <div class="col-2"><h5>Contact</h5></div>
                                <div class="col-10"><input type="text" name="Contact" value="@Model.Contact"/></div>
                            </div>
                            <div class="row">
                                <div class="col-2"><h5>Loyalty Point</h5></div>
                                <div class="col-10"><input type="text" name="LoyaltyPoint" value="@Model.LoyaltyPoint"/></div>
                            </div>
                            <div class="row">
                                <div class="col-2"><h5>Action</h5></div>
                                <div class="col-10"><input type="submit" name="Update" value="Update"/></div>
                            </div>
                        </div>
                    </form>                   
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </div>
</body>
</html>
