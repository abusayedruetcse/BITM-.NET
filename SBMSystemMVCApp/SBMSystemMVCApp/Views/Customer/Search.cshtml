@model List<SBMSystemMVCApp.Models.Models.Customer>
@{
    ViewBag.Title = "Search Customer";
    Layout = "~/Views/Shared/_MyTheme.cshtml";
}

<div class="row">
    <div class="col-2"></div>
    <div class="col-md-8">
        <h2 style="background-color:bisque;text-align:center">Search Customer</h2>
        <form method="post">
            <div class="row">
                <div class="col-md-1" style="text-align:center">Code</div>
                <div class="col-md-6" style="border:hidden;padding-bottom:5px;"><input class="col-12" type="text" name="Code" /></div>
            </div>
            <div class="row">
                <div class="col-md-1">Name</div>
                <div class="col-md-6" style="border:hidden;padding-bottom:5px;"><input class="col-12" type="text" name="Name" /></div>
            </div>
            <div class="row">
                <div class="col-md-1">Address</div>
                <div class="col-md-6" style="border:hidden;padding-bottom:5px;"><input class="col-12" type="text" name="Address" /></div>
            </div>
            <div class="row">
                <div class="col-md-1">Email</div>
                <div class="col-md-6" style="border:hidden;padding-bottom:5px;"><input class="col-12" type="text" name="Email" /></div>
            </div>
            <div class="row">
                <div class="col-md-1">Contact</div>
                <div class="col-md-6" style="border:hidden;padding-bottom:5px;"><input class="col-12" type="text" name="Contact" /></div>
            </div>
            <div class="row">
                <div class="col-md-1">Action</div>
                <div class="col-md-6" style="border:hidden;padding-bottom:5px;"><input type="submit" name="Search" value="Search" /></div>
            </div>
        </form>
        <div>
            @if (Model != null)
            {
                if (Model.Count != 0)
                {
                    <h3 style="text-align:center">Customer Informations</h3>
                }
                else
                {
                    <h5 style="color:red; font-size:medium;">No Customer Found</h5>
                }
                int sl = 1;
                <div class="row">
                    <div class="col-md-1">SL</div>
                    <div class="col-md-1">Code</div>
                    <div class="col-md-2">Name</div>
                    <div class="col-md-2">Address</div>
                    <div class="col-md-2">Email</div>
                    <div class="col-md-2">Contact</div>
                    <div class="col-md-1">LoyaltyPoint</div>
                    <div class="col-md-1"></div>
                </div>
                foreach (var customer in Model)
                {
                    <div class="row">
                        <div class="col-md-1">@(sl++)</div>
                        <div class="col-md-1">@customer.Code</div>
                        <div class="col-md-2">@customer.Name</div>
                        <div class="col-md-2">@customer.Address</div>
                        <div class="col-md-2">@customer.Email</div>
                        <div class="col-md-2">@customer.Contact</div>
                        <div class="col-md-1">@customer.LoyaltyPoint</div>
                        <div class="col-md-1"></div>
                    </div>
                }
            }

        </div>
    </div>
    <div class="col-2"></div>
</div>


        
    
